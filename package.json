{
  "name": "my-product",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "babel": "^6.23.0",
    "bcrypt": "^5.0.0",
    "bootstrap": "^4.3.1",
    "concurrently": "^4.1.2",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "mongodb": "^3.3.4",
    "mongoose": "^5.7.11",
    "dotenv": "^8.1.0",
    "morgan": "^1.9.1"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon server\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build",
    "test": "mocha"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "request": "^2.88.0"
  },
  "engines": {
    "node": "12.10.0"
  }
}
